{% extends "layout/layout.html.twig" %}

{% block content %}
    <div class="container col-lg-6">
        <h1>Add Article</h1>
        <form role="form" method="POST" action="{{base_url}}/article-web/create">
            <div class="form-group">
                <label for="name">Title</label>
                <input type="text" class="form-control" required id="title" name="title" onblur="convertToSlug(this.value)">
            </div>
            <div class="form-group">
                <label for="name">Author</label>
                <select name="author_id" class="form-control" required>
                    <option value="">Select Author</option>
                    {% for key,val in authors %}
                        <option value="{{ key }}">{{ val }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label for="name">URL</label>
                <input type="text" class="form-control" required id="url" name="url">
            </div>
            <div class="form-group">
                <input type="hidden" id="put" name="post" value="1">
            </div>

            <button type="submit" class="btn btn-info">Submit</button>
        </form>
    </div>
{% endblock content %}